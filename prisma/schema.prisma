generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                String       @id @default(uuid())
  email             String       @unique
  cong              Int?
  funcao            Funcao?
  instanciaWhatsApp String?
  nome              String
  designacoes       Designacao[]

  @@map("usuarios")
}

model Semana {
  id               String           @id @default(uuid())
  diaReuniao       String           @map("dia_reuniao")
  canticoInicial   String           @map("cantico_inicial")
  canticoMeio      String           @map("cantico_meio")
  canticoFinal     String           @map("cantico_final")
  capitulos        String
  semana           String           @unique
  eventosEspeciais EventoEspecial[]
  designacao       Designacao[]
  partes           Parte[]
  visitas          Visita[]

  @@map("semana")
}

model Parte {
  id              String       @id @default(uuid())
  semana          String       @map("semana")
  secao           Secao?
  nome            String
  tempo           String?
  designacao      Designacao[]
  semanaReference Semana       @relation(fields: [semana], references: [semana], onDelete: Cascade)

  @@map("partes")
}

model Designacao {
  id                String   @id @default(uuid())
  semana            String
  parte             String
  participante      String
  cong              Int
  criadoPor         String
  telefone          String?
  diaReuniao        String
  formaDeTratamento String?
  nome              Boolean?
  obsText           String?
  tempo             Boolean?
  notificado        Boolean? @default(false)
  usuarioReference  Usuario  @relation(fields: [criadoPor], references: [id], onDelete: Cascade)
  parteReference    Parte    @relation(fields: [parte], references: [id], onDelete: Cascade)
  semanaReference   Semana   @relation(fields: [semana], references: [semana], onDelete: Cascade)

  @@map("designacoes")
}

model Visita {
  id        String @id @default(uuid())
  semana    String
  cong      Int
  tema      String
  semanaRef Semana @relation(fields: [semana], references: [semana], onDelete: Cascade)

  @@map("visitas")
}

model EventoEspecial {
  id        String @id @default(uuid())
  semana    String
  data      String
  cong      Int
  tema      String
  tipo      TipoEvento
  semanaRef Semana @relation(fields: [semana], references: [semana], onDelete: Cascade)
}

model Feedback {
  id    String @id @default(uuid())
  nome  String
  email String
  tipo  String
  sobre String
  texto String

  @@map("feedbacks")
}

enum Secao {
  tesouros
  ministerio
  vida
}

enum Funcao {
  participar
  designar
}

enum TipoEvento {
  assembleia
  congresso
}